  
{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "dist/tsc/",
    "noEmitOnError": true,
    "sourceMap": true,
    "module": "amd",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
	"jsx": "react",
    "types": [ "mendix-client"],
	 "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "watch": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "skipLibCheck": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}